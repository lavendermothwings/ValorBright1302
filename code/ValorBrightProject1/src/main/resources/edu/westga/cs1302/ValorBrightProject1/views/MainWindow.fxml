<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="840.0" prefWidth="557.0" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs1302.ValorBrightProject1.views.MainWindow">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Task" />
      <TextField id="name" fx:id="name" />
      <Label text="Task Description" />
      <TextArea id="description" fx:id="description" prefHeight="200.0" prefWidth="200.0" />
      <Label text="Priority" />
      <ComboBox id="priority" fx:id="priority" prefWidth="150.0" />
      <Button fx:id="submit" mnemonicParsing="false" onAction="#addTask" text="Submit" />
      <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" />
      <Button mnemonicParsing="false" onAction="#removeTask" text="Remove" />
      <Label text="Display Description" />
      <TextArea fx:id="selectedDisplay" prefHeight="200.0" prefWidth="200.0" />
      <Button mnemonicParsing="false" onAction="#updateDescription" text="Update Description" />
      <Label text="Display Priority" />
      <TextArea fx:id="selectedPriority" editable="false" prefHeight="71.0" prefWidth="518.0" />
   </children>
</VBox>
